= simple_form_for(@workout, html: {class: 'form-horizontal'}) do |f|
  = f.input :date, label: "Date"
  = f.input :workout, label: "Which area have you worked out?", input_html: {class: "form-control"}
  = f.input :mood, label: "How were you feeling", input_html: {class: "form-control"}
  = f.input :lenght, label: "How long did you train?", input_html: {class: "form-control"}
  %br/
  = f.button :submit
